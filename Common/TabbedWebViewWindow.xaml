<Window
    x:Class="Trivial.UI.TabbedWebViewWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Trivial.UI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Closed="OnClosed"
    Activated="OnActivated"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="28" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <!--<Rectangle x:Name="TitleBackground" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Fill="#01808080" />-->
        <Border x:Name="TitleBackground" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="#01808080" >
            <TextBlock x:Name="TitleElement" FontSize="14" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="10,0" />
        </Border>
        <local:TabbedWebView x:Name="HostElement" TabCloseRequested="OnTabCloseRequested" Grid.Row="1" />
    </Grid>
</Window>
