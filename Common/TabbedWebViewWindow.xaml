<Window
    x:Class="Trivial.UI.TabbedWebViewWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Trivial.UI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Closed="OnClosed"
    Activated="OnActivated"
    mc:Ignorable="d">

    <local:TabbedWebView x:Name="HostElement" TabCloseRequested="OnTabCloseRequested" WebViewTabCreated="OnWebViewTabCreated" SelectionChanged="OnSelectionChanged"  Grid.Row="1" >
        <local:TabbedWebView.TabStripFooter>
            <Border x:Name="CustomDragRegion" Background="#01808080" MinWidth="160" />
        </local:TabbedWebView.TabStripFooter>
    </local:TabbedWebView>
</Window>
