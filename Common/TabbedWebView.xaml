<UserControl
    x:Class="Trivial.UI.TabbedWebView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Trivial.UI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <TabView x:Name="HostElement" x:DefaultBindMode="OneWay" HorizontalAlignment="{x:Bind HorizontalAlignment}" VerticalAlignment="{x:Bind VerticalAlignment}" CornerRadius="{x:Bind CornerRadius}" Background="{x:Bind Background}" BackgroundSizing="{x:Bind BackgroundSizing}" BorderBrush="{x:Bind BorderBrush}" BorderThickness="{x:Bind BorderThickness}" Width="{x:Bind Width}" Height="{x:Bind Height}" Padding="{x:Bind Padding}" TabWidthMode="{x:Bind TabWidthMode}" TabCloseRequested="OnTabCloseRequested" AddTabButtonClick="HostElement_AddTabButtonClick" >
    </TabView>
</UserControl>
